<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stevenyee.hellojni.MainActivity">

    <TextView
        android:id="@+id/EnterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EnterText"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <EditText
        android:id="@+id/RowField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/EnterText"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/RowText"
        android:layout_marginLeft="10dp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/RowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/textview"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/RowField"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/ColText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_of_cols"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@+id/ColField"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ColField"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="10dp" />

    <EditText
        android:id="@+id/ColField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/RowField"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/RowField"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/RowField"
        app:layout_constraintHorizontal_bias="0.0"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/StartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/ColField"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/ColField" />

</android.support.constraint.ConstraintLayout>
